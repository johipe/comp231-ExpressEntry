<!DOCTYPE html>
<html>
    
<head>
    <% include ../partials/header.ejs %>
    <link href="/css/law_homepage.css" rel="stylesheet">
</head>

<body>
    <% include ../partials/navbar.ejs %>

    <div class="container-fluid">
      <div class="row">
        <% include lawyerSideBar.ejs %>

        <!--Main content-->
         <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
         <h2 class="sub-header">Create Application</h2>
			<div class="row">
				<form action="/updateApplicant" method="post">
	                <div class="form-group">
	                    <label>First Name:</label>
	                    <input type="text" class="form-control" value="<%= firstname%>"  name="firstname" required  disabled/>
	                </div>
	                <div class="form-group">
	                    <label>Last Name:</label>
	                    <input type="text" class="form-control" value="<%= lastname%>" name="lastname" required  disabled/>
	                </div>
	                <div class="form-group">
	                    <label>Email:</label>
	                    <input type="email" class="form-control" value="<%= email%>" name="email" placeholder="abc@example.com" required  disabled/>
	                </div>
	                <div class="form-group">
	                    <label>Mobile:</label>
	                    <input type="text" class="form-control" name="mobile" required/>
	                </div>
	                <div class="form-group">
	                    <label>Address</label>
	                    <input type="text" class="form-control" name="address" required/>
	                </div>
	                <div class="form-group">
	                    <label>Postal Code</label>
	                    <input type="text" class="form-control" name="postalcode" required/>
	                </div>
	                <div class="form-group col-xs-2">
	                	<label>Applicant Status</label>
						<select class="form-control" id="status" name="status">
							<option>Enable</option>
							<option>Disable</option>
						</select> <br/>
						<input type="hidden" class="btn btn-primary" name="userId" value="<%= userId%>" />
						 <input type="submit" class="btn btn-primary" value="Save" />
	                </div>  
	            </form>  
            </div>
          </div>      	
        <!--ends here-->
      </div>
    </div>
    <% include ../partials/footer.ejs %>
</body>

</html>